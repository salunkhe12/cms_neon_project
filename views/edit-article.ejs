<h1>Edit Article</h1>
<% console.log(article); %> <!-- Add this to check if the article is passed -->
<form action="/articles/edit/<%= article.id %>" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= article.title %>" required><br>

    <label for="content">Content</label>
    <textarea id="content" name="content" required><%= article.content %></textarea><br>

    <label for="category_id">Category</label>
    <select id="category_id" name="category_id" required>
        <% if (categories.length > 0) { %>
            <% categories.forEach(category => { %>
                <option value="<%= category.id %>" <%= article.category_id == category.id ? 'selected' : '' %>>
                    <%= category.name %>
                </option>
            <% }); %>
        <% } else { %>
            <option disabled>No categories available</option>
        <% } %>
    </select>
<br>

    <button type="submit">Update Article</button>
</form>
