<h1>Edit Article</h1>
<form action="/articles/edit/<%= article.id %>" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= article.title %>" required><br>
    <label for="content">Content:</label>
    <textarea id="content" name="content" required><%= article.content %></textarea><br>
    <label for="category_id">Category:</label>
    <select id="category_id" name="category_id" required>
        <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%= category.id == article.category_id ? 'selected' : '' %>><%= category.name %></option>
        <% }) %>
    </select><br>
    <button type="submit">Update Article</button>
</form>
